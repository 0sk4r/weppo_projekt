<!doctype html>
<html lang="pl">

<head>

    <style>
        table,
        th,
        td {
            border: 5px solid black;
            border-collapse: collapse;
        }
    </style>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy"
        crossorigin="anonymous">
    <title>Dodaj produkt</title>

</head>

<body>
    <!-- Navbar-->
    <nav class="navbar navbar-expand-sm bg-light bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Sklep u Bobczyka</a>
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/login">Logowanie</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="/register">Rejestracja</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/add">Dodaj</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="/secret">Secret</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Formularz -->
    <form method="POST" enctype="multipart/form-data">
        Podaj nazwe:
        <input type="text" name="name" value="Podaj opis"> <br>
        Podaj opis:
        <input type="text" name="description"> <br>
        Podaj cene:
        <input type="number" name="price"> <br>
        Dodaj zdjęcie:
        <input type="file" name="photo"> <br>
        <button type="submit" name="submint">Dodaj</button>
    </form>
    <table>
        <tr>
            <th>ID</th>
            <th>Nazwa</th>
            <th>Cena</th>
            <th>Edytuj</th>
            <th>Usuń</th>
        </tr>
        <% for(var i = 0; i < product.length; i++) { %>
            <tr>
                <td>
                    <%= product[i].dataValues.id %>
                </td>
                <td>
                    <%= product[i].dataValues.name %>
                </td>

                <td>
                    <%= product[i].dataValues.price %>
                </td>

                <td>
                    <input type="button" value="Edytuj" onclick=<%=`window.location.href='/edit/${product[i].dataValues.id}'`%> />
                </td>

                <td>
                    <input type="button" value="Usuń" onclick=<%=`window.location.href='/delete/${product[i].dataValues.id}'`%> />
                </td>
            </tr>


        <% } %>
    </table>
</body>

</html>