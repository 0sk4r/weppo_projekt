<!doctype html>
<html lang="en">
<head>

    <style>
        table,
        th,
        td {
            border: 5px solid black;
            border-collapse: collapse;
            padding: 5px;
        }
    </style>

    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css"
          integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy"
          crossorigin="anonymous">

    <title>Document</title>
</head>
<body>
<nav class="navbar navbar-expand-sm bg-light bg-dark navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Komputrex</a>
        <ul class="navbar-nav mr-auto">
            <%if(!login){%>
            <li class="nav-item">
                <a class="nav-link" href="/login">Logowanie</a>
            </li>
            <li class="nav-item ">
                <a class="nav-link" href="/register">Rejestracja</a>
            </li>
            <%} else { %>
            <li class="nav-item">
                <a class="nav-link" href="/logout">Wyloguj  </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/cart">Koszyk  </a>
            </li>
            <li class="nav-item ">
                <a class="nav-link" href="/orders">Moje zamówienia</a>
            </li>
            <% if(admin === "1") { %>
            <li class="nav-item ">
                <a class="nav-link" href="/add">Zarządzanie sklepem</a>
            </li>
            <li class="nav-item ">
                <a class="nav-link" href="/users">Zarządzanie użytkownikami</a>
            </li>
            <li class="nav-item ">
                <a class="nav-link" href="/all">Wszystkie zamówienia</a>
            </li>
            <% } }%>
            <li class="nav-item">
                <form method="post">
                    <input type="text" name="search_text">
                    <button type="submit" name="submint">Szukaj</button>
                </form>
            </li>

        </ul>
    </div>
</nav>


<div class="col-lg">
    <table class="table table-striped table-bordered">
        <tr>
            <th>ID</th>
            <th>Login</th>
            <th>Cena</th>
            <th>Szczegóły</th>
        </tr>
        <% for(var i = 0; i < orders.length; i++) { %>
        <tr>
            <td>
                <%= orders[i].dataValues.id %>
            </td>
            <td>
                <%= orders[i].user.dataValues.login %>
            </td>

            <td>
                <%= orders[i].dataValues.price %>
            </td>

            <td>
                <input type="button" class="btn btn-info" value="Zobacz"
                       onclick=<%= `window.location.href='/order/${orders[i].dataValues.id}'` %> />
            </td>
        </tr>

        <% } %>
    </table>
</div>


</body>
</html>